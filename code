// SIT210 - Task 2.1 - Pass
// -----------------------------------

/* First, let's create our "shorthand" for the pins:
led1 is D6, led2 is D7 */

int led1 = D6;
int led2 = D7;

int ledToggle(String command);

// This time, we are also going to register our Particle function
void setup()
{
   // Here's the pin configuration
   pinMode(led1, OUTPUT);
   pinMode(led2, OUTPUT);

   // We are also going to declare a Particle.function so that we can turn the LED on and off from the cloud.
   // This is saying that when we ask the cloud for the function "led", it will employ the function ledToggle() from this app.
   Particle.function("led",ledToggle);

   // For good measure, let's also make sure both LEDs are off when we start:
   digitalWrite(led1, LOW);
   digitalWrite(led2, LOW);
}

// We're going to have a super cool function now that gets called when a matching API request is sent
// This is the ledToggle function we registered to the "led" Particle.function earlier.

int ledToggle(String command) {
    /* Particle.functions always take a string as an argument and return an integer.
    Since we can pass a string, it means that we can give the program commands on how the function should be used.
    In this case, telling the function "on" will turn the LED on to blink the name in morse code and telling it "off" will turn the LED off.
    Then, the function returns a value to us to let us know what happened.
    In this case, it will return 1 for the LEDs turning on, 0 for the LEDs turning off,
    and -1 if we received a totally bogus command that didn't do anything to the LEDs.
    */

    // Turns on the LEDs to blink name in morse code
    if (command=="on") {
        //D
        digitalWrite(led1,HIGH);
        digitalWrite(led2,HIGH);
        delay(3000);
            
        digitalWrite(led1,LOW);
        digitalWrite(led2,LOW);
        delay(1000);
            
        digitalWrite(led1,HIGH);
        digitalWrite(led2,HIGH);
        delay(1000);
            
        digitalWrite(led1,LOW);
        digitalWrite(led2,LOW);
        delay(1000);
            
        digitalWrite(led1,HIGH);
        digitalWrite(led2,HIGH);
        delay(1000);
            
        digitalWrite(led1,LOW);
        digitalWrite(led2,LOW);
        delay(3000);
            
        //E
        digitalWrite(led1,HIGH);
        digitalWrite(led2,HIGH);
        delay(1000);
            
        digitalWrite(led1,LOW);
        digitalWrite(led2,LOW);
        delay(3000);
            
        //V
        digitalWrite(led1,HIGH);
        digitalWrite(led2,HIGH);
        delay(1000);
            
        digitalWrite(led1,LOW);
        digitalWrite(led2,LOW);
        delay(1000);
            
        digitalWrite(led1,HIGH);
        digitalWrite(led2,HIGH);
        delay(1000);
            
        digitalWrite(led1,LOW);
        digitalWrite(led2,LOW);
        delay(1000);
            
        digitalWrite(led1,HIGH);
        digitalWrite(led2,HIGH);
        delay(1000);
            
        digitalWrite(led1,HIGH);
        digitalWrite(led2,HIGH);
        delay(3000);
            
        digitalWrite(led1,LOW);
        digitalWrite(led2,LOW);
        delay(3000);
            
        //I
        digitalWrite(led1,HIGH);
        digitalWrite(led2,HIGH);
        delay(1000);
            
        digitalWrite(led1,LOW);
        digitalWrite(led2,LOW);
        delay(1000);
        
        digitalWrite(led1,HIGH);
        digitalWrite(led2,HIGH);
        delay(1000);
            
        digitalWrite(led1,LOW);
        digitalWrite(led2,LOW);
        delay(3000);
            
        //N
        digitalWrite(led1,HIGH);
        digitalWrite(led2,HIGH);
        delay(3000);
            
        digitalWrite(led1,LOW);
        digitalWrite(led2,LOW);
        delay(1000);
            
        digitalWrite(led1,HIGH);
        digitalWrite(led2,HIGH);
        delay(1000);
            
        //End (Signals End)
        digitalWrite(led1,LOW);
        digitalWrite(led2,LOW);
        delay(7000);
        return 1;
    }
    // Turns off the LEDs
    else if (command=="off") {
        digitalWrite(led1,LOW);
        digitalWrite(led2,LOW);
        return 0;
    }
    else {
        return -1;
    }
}
